{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "esnext",
      "es6",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "target": "esnext",
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.tsx",
    "packages/neon-law/cypress"
  ],
}
