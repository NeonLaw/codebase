{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "esnext", "es6", "es2015.promise"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./build",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./packages/api/node_modules/@types",
      "./packages/delete-your-data/node_modules/@types",
      "./packages/interface/node_modules/node_modules/@types",
      "./packages/justice-for-rickie-slaughter/node_modules/@types",
      "./packages/law-job-resources/node_modules/@types",
      "./packages/shared-ui/node_modules/@types"
    ]
  },
  "include": ["./packages/**/*", "./@types/*"],
  "exclude": [
    "./node_modules",
    "./build",
    "./packages/interface/cypress",
    "./packages/justice-for-rickie-slaughter/cypress",
    "./packages/delete-your-data/cypress",
    "./packages/law-job-resources/cypress",
    "./packages/api/tests/utils/graphqlHelpers.ts",
    "./packages/shared-ui/src/utils/api.tsx",
    "./packages/**/*.test.ts",
    "./packages/api/tests/utils/dbHelpers.ts",
    "./packages/api/tests/utils/sanitizeSnapshot.ts",
    "./packages/**/*.test.tsx",
    "./packages/api/src/server.ts"
  ]
}
