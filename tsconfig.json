{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "packages",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "esnext",
      "es6",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@components/*": [
        "shared/src/components/*"
      ],
      "@forms/*": [
        "shared/src/forms/*"
      ],
      "@layouts/*": [
        "shared/src/layouts/*"
      ],
      "@themes/*": [
        "shared/src/themes/*"
      ],
      "@utils/*": [
        "shared/src/utils/*"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "build",
    "packages/neon-law/cypress"
  ],
}
