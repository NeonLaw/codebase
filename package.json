        "@types/express-serve-static-core": "^4.17.18",
        "@types/faker": "^5.1.7",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.14.32",
        "@types/yup": "^0.29.11",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "axe-core": "^4.1.3",
        "babel-jest": "^26.6.3",
        "babel-plugin-add-react-displayname": "^0.0.5",
        "cypress-axe": "^0.12.2",
        "cypress-plugin-tab": "^1.0.5",
        "eslint": "^7.21.0",
